{
  "src": "src",
  "dist": "dist",
  "watch": false,
  "logDepth": "minimum",
  "debug": true,
  "html": {
    "patterns": ["**/*", "!**/_*/*", "!**/html/**/*", "!**/data/**"],
    "extensions": [".html", ".pug", ".jade"],
    "externalData": "assets/html/data/default.ts"
  },
  "js": {
    "patterns": ["**/*", "!**/*.d", "!**/_*/**/*"],
    "extensions": [".js", ".ts", ".tsx"],
    "compiledExtension": ".js",
    "sourcemap": true,
    "minify": true
  },
  "css": {
    "patterns": ["**/*", "!**/_*", "!**/_*/*"],
    "extensions": [".css", ".scss", ".sass"],
    "compiledExtension": ".css",
    "sourcemap": true
  },
  "img": {
    "patterns": ["**/*", "!**/_*/*"],
    "extensions": [".png", ".jpg", ".jpeg", ".gif", ".svg", ".ico"]
  },
  "excludePrefix": ["_", "html", "data"],
  "watchOptions": {
    "open": true,
    "hot": true,
    "server": {
      "port": 3000,
      "index": "index.html"
    }
  }
}